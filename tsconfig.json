{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "outDir": "frontend/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // make the 'chrome' namespace available
    "types": ["chrome"]
  },
  "include": [
    "frontend/**/*.ts",
    "backend/**/*.ts"
  ],
  "exclude": [
    "frontend/dist",
    "node_modules"
  ]
}
