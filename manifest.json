{
  "name": "VerifyIT",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "frontend/dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["frontend/dist/content.js"]
    }
  ],
  "action": {
    "default_popup": "frontend/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "reload-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Reload VerifyIT"
    }
  }
}
